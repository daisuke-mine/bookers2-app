  <table>
    <tbody>
      <% bookfind.book_comment.each do |comment| %>
        <% book_comment_user = comment.user %>
        <tr>
          <td><%= attachment_image_tag comment.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%>
            <br> <%= link_to comment.user.name, user_path(comment.user) %> </br>
          </td>
          <td> <%= comment.comment %> </td>
          <td>
          <% if current_user == book_comment_user %>
            <%= link_to 'Destroy', book_book_comment_path(comment.book_id, comment.id), class: 'btn-sm btn-danger', method: :delete, remote: true %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>